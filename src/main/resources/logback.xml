<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>http-server-sample.log</file>
        <encoder>
            <pattern>%d{dd-MM-yyyy-HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="FILE"/>
    </root>
</configuration>